{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Order Details Schema",
  "description": "JSON Schema for order_details table containing equipment rental and moving help details",
  "required": ["OrderId"],
  "properties": {
    "OrderId": {
      "type": "integer",
      "description": "Primary key for the order"
    },
    "EquipmentRentalDetails": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "OrderId",
          "Status",
          "Equipment",
          "TotalPaid",
          "Type",
          "Coverage",
          "Itinerary",
          "OrderType",
          "AssociatedContractId"
        ],
        "properties": {
          "OrderId": {
            "type": "integer",
            "description": "Order ID for the equipment rental"
          },
          "Status": {
            "type": "string",
            "description": "Status of the equipment rental order"
          },
          "Equipment": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["ModelCode", "Rate"],
              "properties": {
                "ModelCode": {
                  "type": "string",
                  "description": "Model code of the equipment"
                },
                "Rate": {
                  "type": "string",
                  "description": "Rate for the equipment rental"
                }
              }
            }
          },
          "TotalPaid": {
            "type": "number",
            "description": "Total amount paid for the equipment rental",
            "multipleOf": 0.01
          },
          "Type": {
            "type": "string",
            "description": "Type of the rental"
          },
          "Coverage": {
            "type": "string",
            "description": "Coverage type for the rental"
          },
          "Itinerary": {
            "type": "object",
            "required": [
              "PickupDate",
              "DropoffDate",
              "PickupLocation",
              "DropoffLocation"
            ],
            "properties": {
              "PickupDate": {
                "type": "string",
                "format": "date-time",
                "description": "Date and time for equipment pickup"
              },
              "DropoffDate": {
                "type": "string",
                "format": "date-time",
                "description": "Date and time for equipment dropoff"
              },
              "PickupLocation": {
                "type": "string",
                "description": "Location for equipment pickup"
              },
              "DropoffLocation": {
                "type": "string",
                "description": "Location for equipment dropoff"
              }
            }
          },
          "OrderType": {
            "type": "string",
            "description": "Type of the order"
          },
          "AssociatedContractId": {
            "type": "integer",
            "description": "Associated contract ID for the rental"
          }
        }
      }
    },
    "MovingHelpDetails": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "job_id",
          "job_type",
          "job_status",
          "rate_service_provider",
          "total_paid",
          "job_date_start",
          "job_completed_date",
          "job_entered_date",
          "job_last_modified_date",
          "service_provider_name"
        ],
        "properties": {
          "job_id": {
            "type": "integer",
            "description": "Unique identifier for the moving help job"
          },
          "job_type": {
            "type": "string",
            "description": "Type of moving help job"
          },
          "job_status": {
            "type": "string",
            "description": "Current status of the job"
          },
          "rate_service_provider": {
            "type": "string",
            "description": "Rate for the service provider"
          },
          "total_paid": {
            "type": "number",
            "description": "Total amount paid for the moving help service",
            "multipleOf": 0.01
          },
          "job_date_start": {
            "type": "string",
            "description": "Start date of the job"
          },
          "job_completed_date": {
            "type": "string",
            "description": "Date when the job was completed"
          },
          "job_entered_date": {
            "type": "string",
            "description": "Date when the job was entered into the system"
          },
          "job_last_modified_date": {
            "type": "string",
            "description": "Date when the job was last modified"
          },
          "service_provider_name": {
            "type": "string",
            "description": "Name of the service provider"
          }
        }
      }
    }
  }
}