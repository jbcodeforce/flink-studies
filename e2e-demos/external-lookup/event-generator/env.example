# Example environment configuration for Payment Event Generator
# Copy this file to .env and modify as needed

# Kafka Configuration
PAYMENT_GEN_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
PAYMENT_GEN_KAFKA_TOPIC=payment-events
PAYMENT_GEN_KAFKA_CLIENT_ID=payment-event-generator-local

# Generation Settings
PAYMENT_GEN_EVENTS_PER_SECOND=10.0
PAYMENT_GEN_RUN_DURATION_SECONDS=0  # 0 = infinite
PAYMENT_GEN_VALID_CLAIM_RATE=0.85

# Mode Settings
PAYMENT_GEN_BURST_MODE=false
PAYMENT_GEN_BURST_SIZE=100
PAYMENT_GEN_BURST_INTERVAL_SECONDS=30.0

# Output Settings  
PAYMENT_GEN_DRY_RUN=false
PAYMENT_GEN_PRINT_EVENTS=false
PAYMENT_GEN_LOG_LEVEL=INFO

# Monitoring
PAYMENT_GEN_ENABLE_METRICS=true
PAYMENT_GEN_METRICS_PORT=8090

# Development/Testing
# PAYMENT_GEN_DRY_RUN=true
# PAYMENT_GEN_PRINT_EVENTS=true
# PAYMENT_GEN_LOG_LEVEL=DEBUG
# PAYMENT_GEN_EVENTS_PER_SECOND=2.0

