# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

aws_region       = "us-east-1"
instance_name    = "flink-playground"
instance_type    = "t2.micro"    # Free tier eligible
key_name         = "flink-playground-key"

# For better security, restrict SSH to your IP address
# Get your IP: curl -s ifconfig.me
# allowed_ssh_cidr = "YOUR_IP_HERE/32"
allowed_ssh_cidr = "0.0.0.0/0"
