{
    "apiVersion": "cmf.confluent.io/v1",
    "kind": "ComputePool",
    "metadata": {
      "name": "pool1"
    },
    "spec": {
      "type": "DEDICATED",
      "clusterSpec": {
        "flinkVersion": "v1_19",
        "image": "confluentinc/cp-flink-sql:1.19-cp5",
        "flinkConfiguration": {
          "pipeline.operator-chaining.enabled": "false",
          "execution.checkpointing.interval": "30s",
          "taskmanager.numberOfTaskSlots": "4"
        },
        "taskManager": {
          "resource": {
            "cpu": 1,
            "memory": "2048m"
          }
        },
        "jobManager": {
          "resource": {
            "cpu": 0.5,
            "memory": "1024m"
          }
        }
      }
    }
  }